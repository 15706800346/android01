<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="80dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/linear_park">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/park"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="15dp"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="停哪儿"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/linear_metro">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/metro"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="15dp"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="城市地铁"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/linear_bus">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/bus"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="15dp"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="智慧巴士"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/linear_hospital">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/hospital"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="15dp"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="门诊预约"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/linear_car">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/car"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="15dp"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="智慧交管"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/linear_money">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/money"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="15dp"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="生活缴费"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/linear_hungry">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/hungry"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="15dp"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="外卖订餐"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/linear_findhouse">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/findhouse"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="15dp"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="找房子"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/linear_movie">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:background="@drawable/movie" />
            <TextView
                android:layout_width="40dp"
                android:layout_height="15dp"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="看电影"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/linear_moreservices">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/moreservices"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="15dp"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="更多服务"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>