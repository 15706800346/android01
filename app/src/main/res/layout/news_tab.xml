<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="30dp">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="今日要闻"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/tab_icon"
                android:id="@+id/tv_news_class1"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="专题聚焦"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/tab_icon"
                android:id="@+id/tv_news_class2"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="政策解读"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/tab_icon"
                android:id="@+id/tv_news_class3"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="经济发展"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/tab_icon"
                android:id="@+id/tv_news_class4"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="文化旅游"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/tab_icon"
                android:id="@+id/tv_news_class5"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="科技创新"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/tab_icon"
                android:id="@+id/tv_news_class6"/>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>